@model IEnumerable<RoomServicesModel>
@{
    ViewData["Title"] = "RoomServices";
}

<div class="card">
    <div class="row card-header">
        <h5>Room Services</h5>
    </div>

    <div class="row">
        <div class="col-3 p-4">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#roomServicesAddedModel">Add new Room Service</button>
        </div>
        <div class="modal fade" id="roomServicesAddedModel" tabindex="-1" aria-labelledby="roomServicesAddedModel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Room Service</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-action="AddRoomServices" method="post">
                        <div class="modal-body">

                            <div class="mb-3">
                                <label for="RoomServicesName" class="form-label">Room Service Name</label>
                                <input type="text" class="form-control" id="RoomServicesName" name="RoomServicesName" placeholder="">
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body px-4">
        <div class="col-8">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Room Service Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var RoomServices in Model)
                    {
                        <tr>
                            <td>
                                @RoomServices.ID
                            </td>
                            <td>
                                @RoomServices.RoomServicesName
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

